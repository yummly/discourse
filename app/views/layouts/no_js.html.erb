<!DOCTYPE html>
<html lang="<%= SiteSetting.default_locale %>">
  <head>
    <meta charset="utf-8">
    <title><%=SiteSetting.title%></title>
    <meta name="description" content="">
    <%= render partial: "layouts/head" %>
    <%= raw SiteText.text_for(:head) %>
    <%= yield(:no_js_head) %>
  </head>
  <body>
    <%- unless customization_disabled? %>
      <%= SiteCustomization.custom_header(session[:preview_style]) %>
    <%- end %>
    <section id='main'>
      <header class="d-header">
        <div class="container">
          <div class="contents">
            <div class="row">
              <div class="title span13">
                <a href="#{Discourse.base_uri}/"><img src="<%=SiteSetting.logo_url%>" alt="<%=SiteSetting.title%>" id="site-logo"></a>
              </div>
              <% unless current_user %>
                <div class='panel clearfix'>
                  <a href="#{Discourse.base_uri}/login" class='btn btn-primary btn-small'><i class="fa fa-user"></i><%= I18n.t('log_in') %></a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </header>
      <div id="main-outlet" class="container">
        <%= yield %>
      </div>
    </section>
  </body>
</html>
